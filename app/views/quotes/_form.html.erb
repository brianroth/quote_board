<%= simple_form_for @quote, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Quote</legend>

    <%= f.input :body %>
    <%= f.input :author %>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', quotes_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
